<div class="mb-3">
  <label for="exampleFormControlInput1" class="form-label">Name</label>
  <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="John Doe">
</div>

<div class="mb-3">
  <label for="exampleFormControlInput1" class="form-label">Email address</label>
  <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
</div>

<div class="mb-3">
  <label for="exampleFormControlInput1" class="form-label">File Name</label>
  <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Records.csv, Photo.jpg, HR.bak">
</div>

<div class="mb-3">
  <label for="exampleFormControlTextarea1" class="form-label">Discription</label>
  <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Enter some information about your file"></textarea>
</div>



